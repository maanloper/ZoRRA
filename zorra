#!/bin/bash
set -e

## Get the absolute path to the current script directory
script_dir="$(cd "$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")" && pwd)"

## Get .env
if [[ -f "${script_dir}/.env" ]]; then
    export $(grep -E '^[a-zA-Z_][a-zA-Z0-9_]*=.*' "${script_dir}/.env" | xargs)
else
    echo "No .env file found. Please run 'sudo cp example.env .env' and edit the contents"
	exit 1
fi

## Ensure at least one argument is provided
if [[ $# -eq 0 ]]; then
	echo "Error: missing command/argument for 'zorra'"
	echo "Enter 'zorra --help' for usage"
	exit 1
fi

## Parse the top-level command
command="$1"
shift 1

## Dispatch command
case "${command}" in
	--help)
		cat "${script_dir}/usage.txt"
		echo -e "\n\n"
	;;
	debootstrap-install)
		"${script_dir}/debootstrap-install.sh" "$@"
	;;
	refind)
		"${script_dir}/${command}/dispatcher.sh" "$@"
	;;
	zfs)
		"${script_dir}/${command}/dispatcher.sh" "$@"
	;;
	zfsbootmenu|zbm)
		"${script_dir}/${command}/dispatcher.sh" "$@"
	;;
	setup)
		"${script_dir}/${command}/dispatcher.sh" "$@"
	;;
	*)
		echo "Error: unrecognized command 'zorra ${command}'"
		echo "Enter 'zorra --help' for usage"
		exit 1
	;;
esac